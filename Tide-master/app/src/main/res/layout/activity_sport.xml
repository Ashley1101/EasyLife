<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deepspring.lib.ui.activity.SportActivity">

    <ScrollView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stepTextView"
        android:layout_centerHorizontal="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <com.deepspring.lib.ui.widget.MyViewPager
        android:id="@+id/sviewpager"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.deepspring.lib.ui.widget.MyViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.deepspring.lib.ui.widget.MyCircleProgress
            android:id="@+id/scircleProgress"
            android:layout_width="@dimen/circle_width"
            android:layout_height="@dimen/circle_height"
            android:layout_marginTop="@dimen/circle_maTop"
            android:layout_centerHorizontal="true"
            android:paddingStart="@dimen/circle_paStart"
            android:paddingTop="@dimen/circle_paTop"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/smid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="223dp"
            android:text="Walk"
            android:visibility="visible"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/stepArrayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginStart="130dp"
            android:text="10829 steps"
            android:textSize="30sp"
            android:layout_marginLeft="220dp" />
        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginTop="235dp"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:layout_marginLeft="150dp" />

        <TextView
            android:id="@+id/stepTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="1028 steps"
            android:layout_marginTop="235dp"
            android:layout_marginStart="150dp"
            android:textSize="30sp"
            android:layout_marginLeft="150dp"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/stepArrayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="所有步数" />

        <Button
            android:id="@+id/sbt_play"
            android:background="@drawable/shape_play"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bt_maTop"
            android:layout_width="@dimen/bt_play_width"
            android:layout_height="@dimen/bt_height"
            android:text="开始运动"
            android:soundEffectsEnabled="false"/>

        <Button
            android:id="@+id/sbt_pause"
            android:background="@drawable/shape_pause"
            android:textSize="@dimen/button_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bt_maTop"
            android:layout_width="@dimen/bt_width"
            android:layout_height="@dimen/bt_height"
            android:text="暂停"
            android:visibility="gone"
            android:soundEffectsEnabled="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/sbt_continute"
            android:background="@drawable/shape_continute"
            android:textSize="@dimen/button_text"
            android:layout_marginTop="@dimen/bt_maTop"
            android:layout_marginStart="@dimen/bt_conT_maStart"
            android:layout_width="@dimen/bt_width"
            android:layout_height="@dimen/bt_height"
            android:text="继续"
            android:visibility="gone"
            android:soundEffectsEnabled="false"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/sbt_giveup"
            android:background="@drawable/shape_pause"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/bt_maTop"
            android:layout_marginStart="@dimen/bt_givU_maStart"
            android:layout_width="@dimen/bt_width"
            android:layout_height="@dimen/bt_height"
            android:text="放弃"
            android:visibility="gone"
            android:soundEffectsEnabled="false"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sdaily_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/foot_text_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/foot_text_maTop"
            android:text=""
            android:textColor="#A5FFFFFF"
            android:textSize="@dimen/foot_text_size" />
    </LinearLayout>

    <include layout="@layout/tool_bar"></include>

</RelativeLayout>
